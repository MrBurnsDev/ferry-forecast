{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "istheferryrunning.com"
        }
      ],
      "destination": "https://www.istheferryrunning.com/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/forecast/ingest",
      "schedule": "0 6 * * *"
    }
  ]
}
